alias download='sudo dnf install'
alias redownload='sudo dnf install --allowerasing'
alias update='sudo dnf upgrade && success_notify "Update Complete" "Update Completed Successfully" || fail_notify "Update Failed" "Failed To Update"'
alias remove='sudo dnf remove'
alias remove-orphans='sudo dnf autoremove'
alias search='dnf search'
alias list-installed='dnf list --installed'
alias list-updates='dnf list --upgrades'
alias show-deps='dnf repoquery --whatdepends'
alias show-deps-reverse='dnf repoquery --requires'
alias save-installed='list-installed > /home/amon/.00-installed_pkgs.txt'
alias save-pkgs='save-installed'
alias show-pkg='dnf info'
